@model TMS.Models.ViewModels.TenantDetails


@{
    ViewBag.Title = "Edit Tenant";
}


<div id="tenants" class="row">

    <div class="col-md-4 col-md-offset-4 form-bg">
        <h2>Edit tenant</h2>
        <form class="form form-horizontal" action="/Tenant/Update/@Model.Tenant.TenantId" method="post">
            <input class="form-control" id="id" name="TenantId" type="hidden" value="@Model.Tenant.TenantId" placeholder="Name" />

            <div class="form-group">
                <label id="name">Name</label>
                <input class="form-control" id="name" name="TenantName" type="text" value="@Model.Tenant.TenantName" placeholder="Name" />
            </div>
            <div class="form-group">
                <label id="email">Email</label>
                <input class="form-control" id="email" name="TenantEmail" type="email" value="@Model.Tenant.TenantEmail" placeholder="Email" />
            </div>
            <div class="form-group">
                <label id="phone">Phone</label>
                <input class="form-control" id="phone" name="TenantPhone" type="tel" value="@Model.Tenant.TenantPhone" placeholder="Phone" />
            </div>
            <div class="form-group">
                <label id="emergencyPhone">Emergency Phone</label>
                <input class="form-control" id="emergencyPhone" name="TenantEmergencyContact" type="tel" value="@Model.Tenant.TenantEmergencyContact" placeholder="Phone" />
            </div>
            <div class="form-group">
                <label id="propery">Property</label>
                <select class="form-control" id="property" name="PropertyId">
                    @foreach (var property in Model.ListPropertyData)
                    {
                        <option value="@property.PropertyId">@property.PropertyName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label id="floor">Floor</label>
                <input class="form-control" id="floor" name="TenantFloor" type="number" value="@Model.Tenant.TenantFloor" placeholder="Floor" />
            </div>
            <div class="form-group">
                <label id="room">Room</label>
                <input class="form-control" id="room" name="TenantRoom" type="number" value="@Model.Tenant.TenantRoom" placeholder="Room" />
            </div>
            <div class="form-group">
                <label id="joined">Joined</label>
                <input class="form-control" id="joined" name="TenantJoined" type="date" value="@Model.Tenant.TenantJoined.ToString("yyyy-MM-dd")" />
            </div>

            <div class="pull-right">
                <button class="btn bg-purple" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>