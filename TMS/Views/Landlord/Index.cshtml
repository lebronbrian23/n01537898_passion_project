@model  TMS.Models.LandlordData

@{
    ViewBag.Title = "Edit Landlord";
}


<div id="Landlords" class="row">

    <div class="col-md-5 col-md-offset-3 form-bg">
        <h2>Edit Landlord</h2>
        <form class="form form-horizontal" action="/landlord/Update/@Model.LandlordId" method="post">
            <input class="form-control" id="id" name="LandlordId" type="hidden" value="@Model.LandlordId" placeholder="Name" />

            <div class="form-group">
                <label id="name">Name</label>
                <input class="form-control" id="name" name="LandlordName" type="text" value="@Model.LandlordName" placeholder="Name" />
            </div>
            <div class="form-group">
                <label id="email">Email</label>
                <input class="form-control" id="email" name="LandlordEmail" type="email" value="@Model.LandlordEmail" placeholder="Email" />
            </div>
            <div class="form-group">
                <label id="phone">Phone</label>
                <input class="form-control" id="phone" name="LandlordPhone" type="tel" value="@Model.LandlordPhone" placeholder="Phone" />
            </div>
           

            <div class="form-group">
                <label id="joined">Joined</label>
                <input class="form-control" id="joined" name="LandlordDOB" type="date" value="@Model.LandlordDOB.ToString("yyyy-MM-dd")" />
            </div>

            <div class="pull-right">
                <button class="btn bg-purple" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>