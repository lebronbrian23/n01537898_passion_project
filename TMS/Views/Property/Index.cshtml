@model IEnumerable<TMS.Models.ListPropertyData>
@{
    ViewBag.Title = "Index";
}


<div id="tenants" class="row">
    <div class="col-md-7">
        <h2 class="bottom-border-line">Properties <span></span></h2>
        <table class="table-responsive" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var property in Model)
                {
                    string edit_url = "/property/edit/" + property.PropertyId;
                    string view_url = "/property/view/" + property.PropertyId;
                    <tr>
                        <td>@property.PropertyId</td>
                        <td>@property.PropertyName</td>
                        <td><a href="@edit_url"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td><a href="@view_url"><i class="text-success fa-solid fa-eye"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

    <div class="col-md-5 form-bg">
        <h2>New Property</h2>
        <form class="form form-horizontal" action="/property/add" method="post">
            <input class="form-control" id="LandlordId" name="LandlordId" type="hidden" value="1" />

            
            <div class="form-group">
                <label id="name">Name</label>
                <input class="form-control" id="name" name="PropertyName" type="text" value="" placeholder="Name" />
            </div>
            <div class="form-group">
                <label id="floors">Floors</label>
                <input class="form-control" id="floors" name="PropertyFloors" type="number" value="" placeholder="20" />
            </div>

            <div class="form-group">
                <label id="constructed">Constructed</label>
                <input class="form-control" name="PropertyConstructed" id="constructed" type="date" value="" />
            </div>
            <div class="form-group">
                <label id="address">Address</label>
                <textarea class="form-control" name="PropertyAddress" id="address"></textarea>
            </div>
            <div class="pull-right">
                <button class="btn bg-purple" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>